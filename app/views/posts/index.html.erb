
<% @post.each do |post|%>
    <div class="container-fluid margin">
        <div class="row">
      <div class="panel panel-info">
        <div class="panel-heading"><%= post.title %></div>
        <div class="panel-body">
          <%=  truncate(post.content,lenght:10).html_safe  %>
          <p><%= post.created_at.strftime("%c") %></p>
        </div>
        <%= link_to "Read More" ,post ,class:"a" %>
      </div>
        </div>
      </div>
      <hr>
<% end %>