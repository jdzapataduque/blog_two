<%= form_for @post do |f|%>
	<% if @post.errors.any?%>
	<h2><%= pluralize(@post.errors.count, "error") %></h2>
	<ul>
		<% @post.errors.full_messages.each do |msje|%>
		<li><%= msje %></li>
		<% end %>
	</ul>
	<% end %>
	<!-- Validar si hay errores con el notice -->
	<div>
	<%= f.label :title %>
	<%= f.text_field :title %>
	</div>
	<div>
	<%= f.label :content %>
	<%= f.text_area :content %>
	</div>
	<%= f.submit :Enviar%>
	<% end %>